<!-- Contents Field Start -->
<div class="Contents-Field mdl-color--brown-50">
<!-- Main Contents Field Start -->
  <div class="Main-Contents-Field">

    <% if signed_in? %>
		
		<div class="multiple-section-title mdl-typography--display-1-color-contrast">メインメニュー</div>
		
		<div class="Multiple-Card-Container mdl-grid">
			
			<div class="mdl-card mdl-shadow--4dp mdl-cell mdl-cell--3-col mdl-color--lime-50">
		    	<div class="mdl-card__media">
		        	<%= image_tag "demo/demo-1.png" %>
		    	</div>
		    	<div class="mdl-card__title">
		        	<h4 class="mdl-card__title-text">プロフィール設定</h4>
		    	</div>
		    	<div class="mdl-card__supporting-text">
		        	<span class="mdl-typography--font-light mdl-typography--subhead">
		        	自分のプロフィール情報を変更</span>
		    	</div>
		    	<div class="mdl-card__actions">
		    		<%= link_to current_user, { :class => "multiple-link mdl-button mdl-js-button mdl-typography--text-uppercase" }  do %>
		    	   		<span class="icon-link">Change My Profile 
		    	  		<i class="material-icons">chevron_right</i>
		   		   		</span>
		    		<% end %>
		    	</div>
		  	</div>
		  
		  	<div class="mdl-card mdl-shadow--4dp mdl-cell mdl-cell--3-col mdl-color--lime-50">
		    	<div class="mdl-card__media">
		      		<%= image_tag "demo/demo-2.png" %>
		    	</div>
		    	<div class="mdl-card__title">
		      		<h4 class="mdl-card__title-text">ユーザ検索</h4>
		    	</div>
		    	<div class="mdl-card__supporting-text">
		      		<span class="mdl-typography--font-light mdl-typography--subhead">
		        	ユーザーを検索</span>
		    	</div>
		    	<div class="mdl-card__actions">
		    		<%= link_to search_path, { :class => "multiple-link mdl-button mdl-js-button mdl-typography--text-uppercase" }  do %>
		    	 		<span class="icon-link">Search User 
		    	 		<i class="material-icons">chevron_right</i>
		    	 		</span>
		    		<% end %>      
		    	</div>
		  	</div>
		  
		  	<div class="mdl-card mdl-shadow--4dp mdl-cell mdl-cell--3-col mdl-color--lime-50">
		    	<div class="mdl-card__media">
		      		<%= image_tag "demo/demo-3.png" %>
		    	</div>
		    	<div class="mdl-card__title">
		      		<h4 class="mdl-card__title-text">フレンドリスト</h4>
		    	</div>
		    	<div class="mdl-card__supporting-text">
		      		<span class="mdl-typography--font-light mdl-typography--subhead">
		        	フレンドリストを開く</span>
		    	</div>
		    	<div class="mdl-card__actions">
		    		<%= link_to following_user_path(current_user.id), { :class => "multiple-link mdl-button mdl-js-button mdl-typography--text-uppercase" }  do %>
		       			<span class="icon-link">See My FreindList
		       			<i class="material-icons">chevron_right</i>
		       			</span>
		    		<% end %>
		    	</div>
		  	</div>
		  
		  	<div class="mdl-card mdl-shadow--4dp mdl-cell mdl-cell--3-col mdl-color--lime-50">
		    	<div class="mdl-card__media">
		      		<%= image_tag "demo/demo-4.png" %>
		   	 	</div>
		    	<div class="mdl-card__title">
		      		<h4 class="mdl-card__title-text">メッセージ</h4>
		    	</div>
		    	<div class="mdl-card__supporting-text">
		      		<span class="mdl-typography--font-light mdl-typography--subhead">
		        	メッセージを交換する</span>
		    	</div>
		    	<div class="mdl-card__actions">
		    		<%= link_to message_path, { :class => "multiple-link mdl-button mdl-js-button mdl-typography--text-uppercase" }  do %>
		       			<span class="icon-link">Exchange Messages
		       			<i class="material-icons">chevron_right</i>
		       			</span>
		    		<% end %>
		    	</div>
		  	</div>
		</div>
  
    <% else %>

		<div class="Guest-Card-Field">
			<div class="mdl-card mdl-shadow--4dp mdl-cell mdl-cell--6-col mdl-color--lime-50">
		  		<h4 class="bold">
		  			<br />
		  			&nbsp;&nbsp;棋力、地域、年齢など<br /><br />
		  			&nbsp;&nbsp;自分好みの対戦相手を見つけられる<br /><br />
		  			&nbsp;&nbsp;将棋のマッチングサイト<br /><br />
		  		</h4>
		  		<div class="mdl-card__media mdl-color-text--grey-50 mdl-color--brown-500">
		     		<h3>&nbsp;&nbsp;&nbsp;将友&nbsp;&nbsp;&nbsp;SHO-YU</h3>
		  		</div>
			</div>
		 
		  	<div class="mdl-card mdl-shadow--4dp mdl-cell mdl-cell--5-col mdl-color--lime-50">
		    	<div class="mdl-card__media mdl-color-text--grey-50 mdl-color--brown-500">
		      		<h3>&nbsp;&nbsp;&nbsp;アカウント登録&nbsp;&frasl;&nbsp;ログイン</h3>
		    	</div>
		    	<div class="mdl-color-text--grey-700 mdl-card__supporting-text meta">
		      		<ul class="button" style="list-style:none">
		          		<li>
		            		<%= link_to "メールアドレスで登録 / ログイン", new_user_session_path, 
		            		{ :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect 
		            		mdl-button--accent mdl-color--teal-300", :id => "registMail_button" } %>
		          		</li>
		          			<br />
		          		<li>
		            		<%= link_to "FACEBOOKで登録 / ログイン", user_omniauth_authorize_path(:facebook),
		            		{ :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect 
		            		mdl-button--accent mdl-color--teal-300", :id => "bookface_button" }%>
		          		</li>
		      		</ul>
		    	</div>
		    	<div class="mdl-color-text--grey-700 mdl-card__supporting-text entry-content">
		      		<p>当サイトを利用するにはアカウント登録が必要となります。</p>
		      		<p>上記ボタンよりアカウント登録を行ってください。</p>
		    	</div>
		  	</div>
		</div>
    	<!-- Guest-card-field END -->
		<% end %>

	</div>
	<!-- Main Contents Field END -->

</div>
<!-- Contents Field END -->