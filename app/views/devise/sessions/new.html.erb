<% content_for :singin do %>
	<%= stylesheet_link_tag "layout/main" %>
	<%= stylesheet_link_tag "container/singin" %>
<% end %>

<div class="signin-card-container mdl-grid">
    <div class="mdl-card login-card mdl-shadow--4dp mdl-cell mdl-cell--5-col mdl-color--lime-50">
    	<div class="mdl-card__media mdl-color-text--grey-50 mdl-color--brown-500">
    	    <h3>メールアドレスでログイン</h3>
    	</div>
    	<div class="mdl-card__supporting-text">
    	    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    	    <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>

    	    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    	        <%= f.label :email,'メールアドレス', { class:"mdl-textfield__label" } %><br />
    	        <%= f.email_field :email, { class:"mdl-textfield__input" } %>
    	    </div>
    	
    	    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    	        <%= f.label :password,'パスワード', { class:"mdl-textfield__label" } %><br />
    	        <%= f.password_field :password, { class:"mdl-textfield__input" } %>
    	    </div>
    	</div>
	    <div class = "mdl-card__actions"> 
	        <% if devise_mapping.rememberable? %>
	          <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="checkbox-1">
	            <%= f.check_box :remember_me, { class:"mdl-checkbox__input", id:"checkbox-1" } %>
	            <%= f.label :remember_me,'パスワードを記憶する', { class:"mdl-checkbox__label" } %>
	          </label>
	        <% end %>
	        
	        <%= f.submit "ログイン", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect 
	        mdl-button--accent mdl-color--teal-300" %>
	        <% end %>
	    </div>
	</div>

    <div class="mdl-card regist-card mdl-shadow--4dp mdl-cell mdl-cell--5-col mdl-color--lime-50">
        <div class="mdl-card__media mdl-color-text--grey-50 mdl-color--brown-500">
            <h3>新規登録</h3>
        </div>
        <div class="mdl-card__supporting-text">
            <br />
            <p>アカウント未登録の方はこちら</p>
            <br />
        </div>
        <div class = "mdl-card__actions"> 
            <%= link_to "アカウントを新規で作成する", new_user_registration_path, 
            { :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent 
            mdl-color--teal-300", id:"new_account_button" } %>
        </div>
    </div>
</div>