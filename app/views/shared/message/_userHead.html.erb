<div class="messageContainer-userMedia">
    <div class="messageContainer-userMedia__name">
        <input type="button" value= <%=@user.name %> 
        class ="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent mdl-color--brown-500">
    </div>
    <div class="messageContainer-userMedia__image">
        <% if @user.image_file_name.nil? %>
            <%= image_tag @user.image,url, :size => "100x50" %>
        <% else %>
            <%= image_tag "link/noImage.png", :size => "100x50" %>
        <% end %>
    </div>
</div>