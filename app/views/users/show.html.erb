<!-- Contents Field Start -->
<div class="Contents-Field mdl-color--brown-50">

　 <!-- Main Contents Field Start -->
  <div class="Show-Contents-Field">

  <div class="Contents-Head-Field">
    <div class="head-title-field">
      <h3><%= @user.name %></h3>
    </div>
    
    <div class="head-action-field">
        <% if current_user == @user %>
            <div class="action-item">
                <%= link_to "プロフィールを編集する", edit_user_registration_path, 
                { :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect 
                mdl-button--accent mdl-color--teal-300", :id => "edit_profile_button"} %>
            </div>
        <% else %>
            <% if current_user.following?(@user) %>

                <%= form_for(current_user.relationships.find_by(followed_id: @user.id),html: { method: :delete }) do |f| %>
                    <div class="action-item">
                        <%= f.submit "フレンド登録を解除する", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect 
                        mdl-button--accent mdl-color--teal-300", id:"delete_Freind_button" %>
                    </div>
                <% end %>

            <% else %>

                <%= form_for(current_user.relationships.build(followed_id: @user.id)) do |f| %>
                    <div class="action-item">
                        <div><%= f.hidden_field :followed_id %></div>
                        <%= f.submit "フレンドリストに登録する", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect 
                        mdl-button--accent mdl-color--teal-300", id:"add_Freind_button" %>
                    </div>
                <% end %>

            <% end %>
            
            <div class="action-item">
                <%= link_to "メッセージを送信する", message_path(friend_id: @user.id,friend_name: @user.name, friend_img: @user.image), 
                { :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect 
                mdl-button--accent mdl-color--teal-300", :id => "message_button" } %>
            </div>
                <% end %>
      </div>
  </div>
  
  <div class="Contents-Left-Field">
    <div class="image-area">
        <div class="image">
          <% if @user.image_file_name.nil? %>
            <%= image_tag "link/noImage.png", :size => "200x200" %>
          <% else %>
            <%= image_tag @user.image.url(:medium) %>
          <% end %>
        </div>
    </div>
    <div class="friend-area">
      <div class="mdl-card mdl-shadow--4dp mdl-cell mdl-cell--12-col mdl-color--white">
        <div class="mdl-card__title"><strong><%= @user.name %>さんの<br />
        フレンドリスト</strong></div>
        <div class="mdl-card__supporting-text">
          <div class="follow_buttons" style="list-style:none">
            <li>
              <%= link_to "友達登録しているユーザ", following_user_path(@user), 
              { :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect 
              mdl-button--accent mdl-color--teal-300", :id => "following_button"} %>
            </li>
            <li>
              <%= link_to "友達登録されているユーザ", followers_user_path(@user), 
              { :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect 
              mdl-button--accent mdl-color--teal-300", :id => "followed_button" } %>
            </li>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="Contents-Right-Field">
    <div class="personal-table-area">
    <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp">
      <tbody>
        <tr>
          <td class="mdl-data-table__cell--non-numeric">お名前</td>
          <td class="mdl-data-table__cell--non-numeric"><strong><%= @user.name %></strong></td>
        </tr>
        <tr>
          <td class="mdl-data-table__cell--non-numeric">性別</td>
          <% if @user.sex == 1 %>
          <td class="mdl-data-table__cell--non-numeric"><strong>男性</strong></td>
          <% else %>
          <td class="mdl-data-table__cell--non-numeric"><strong>女性</strong></td>
          <% end %>
        </tr>
        <tr>
        　<td class="mdl-data-table__cell--non-numeric">生年月日</td>
          <td class="mdl-data-table__cell--non-numeric"><strong><%= @user.birthday %></strong></td>
        </tr>
        <tr>
        　<td class="mdl-data-table__cell--non-numeric">メールアドレス</td>
        　<% if @user.email_publish == 0 %>
          <td class="mdl-data-table__cell--non-numeric"><strong>非公開</strong></td>
          <% else %>
          <td class="mdl-data-table__cell--non-numeric"><strong><%= @user.email %></strong></td>
          <% end %>
        </tr>
      </tbody>
    </table>
    </div>

    <div class="profile-table-area">    
    <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp">
      <tbody>
        <tr>
        　<td class="mdl-data-table__cell--non-numeric">棋力</td>
        　<% if @user.kiryoku.blank? %>
        　<td class="mdl-data-table__cell--non-numeric"><strong>未設定</strong></td>
        　<% else %>
          <td class="mdl-data-table__cell--non-numeric"><strong><%= @user.kiryoku %></strong></td>
          <% end %>
        </tr>
        <tr>
        　<td class="mdl-data-table__cell--non-numeric">地域</td>
          <td class="mdl-data-table__cell--non-numeric"><strong><%= @user.area %></strong></td>
        </tr>
        <tr>
        　<td class="mdl-data-table__cell--non-numeric">年齢</td>
          <td class="mdl-data-table__cell--non-numeric"><strong><%= @user.age %></strong></td>
        </tr>
        <tr>
        　<td class="mdl-data-table__cell--non-numeric">ひとこと</td>
          <% if @user.kiryoku.blank? %>
          <td class="mdl-data-table__cell--non-numeric"><strong>未設定</strong></td>
          <% else %>
          <td class="mdl-data-table__cell--non-numeric"><strong><%= @user.comment %></strong></td>
          <% end %>
        </tr>
      </tbody>
    </table>
    </div>
    
    </div>
  </div>
  
  </div>
  <!-- Show Contents Field END -->

</div>
<!-- Contents Field END -->