<!-- Contents Field Start -->
<div class="Contents-Field">
<!-- Main Contents Field Start -->
<div class="Main-Contents-Field mdl-color--yellow-50">
　 <!-- Single Card Field Start -->
  <div class="Single-Card-Field">
  <div class="mdl-card mdl-shadow--4dp mdl-cell mdl-cell--6-col mdl-color--lime-50">
    <div class="mdl-card__media mdl-color-text--grey-50 mdl-color--primary">
      <h3><%= @user.name %>&lt;プロフィール&gt;</h3>
    </div>
    <div class="mdl-color-text--grey-700 mdl-card__supporting-text meta">

      <div class="image">
        <%= image_tag @user.image.url(:medium) %>
      </div>
      
      <%= link_to "プロフィールを編集する", edit_user_registration_path, 
      { :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect 
      mdl-button--accent mdl-color--blue-A700" } %>
    </div>
      
    <div class="mdl-color-text--grey-700 mdl-card__supporting-text entry-content">
    
    <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp">
      <tbody>
        <tr>
          <td class="mdl-data-table__cell--non-numeric"><h5>お名前<h5></td>
          <td class="mdl-data-table__cell--non-numeric"><h5><%= @user.name %></h5></td>
        </tr>
        <tr>
          <td class="mdl-data-table__cell--non-numeric"><h5>性別<h5></td>
          <td class="mdl-data-table__cell--non-numeric"><h5><%= @user.sex %></h5></td>
        </tr>
        <tr>
        　<td class="mdl-data-table__cell--non-numeric"><h5>生年月日</td>
          <td class="mdl-data-table__cell--non-numeric"><h5><%= @user.birthday %></h5></td>
        </tr>
        <tr>
        　<td class="mdl-data-table__cell--non-numeric"><h5>棋力</h5></td>
          <td class="mdl-data-table__cell--non-numeric"><h5><%= @user.kiryoku %></h5></td>
        </tr>
        <tr>
        　<td class="mdl-data-table__cell--non-numeric"><h5>地域</h5></td>
          <td class="mdl-data-table__cell--non-numeric"><h5><%= @user.area %></h5></td>
        </tr>
        <tr>
        　<td class="mdl-data-table__cell--non-numeric"><h5>ひとこと</h5></td>
          <td class="mdl-data-table__cell--non-numeric"><h5><%= @user.comment %></h5></td>
        </tr>
      </tbody>
    </table>
    
    <% @user ||= current_user %>
    <ul>
      <a href="<%= following_user_path(@user) %>">友達登録しているユーザ</a>
      <a href="<%= followers_user_path(@user) %>">友達登録されているユーザ</a>
    </ul>
    
    <% unless current_user == @user %>
      
      <% if current_user.following?(@user) %>

        <!-- unfollow form -->
        <%= form_for(current_user.relationships.find_by(followed_id: @user.id), html: { method: :delete }) do |f| %>
          <%= f.submit "友達登録を解除する", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect 
                  mdl-button--accent mdl-color--primary" %>
        <% end %>

      <% else %>
      
        <!-- following form -->
        <%= form_for(current_user.relationships.build(followed_id: @user.id)) do |f| %>
          <%= f.hidden_field :followed_id %>
          <%= f.submit "友達登録する", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect 
                  mdl-button--accent mdl-color--primary" %>        
        <% end %>
        
      <% end %>
    
    <% end %>
    
    </div>
  
  </div>
  
  </div>
  <!-- Single Card Field END -->
    　
</div>
<!-- Main Contents Field END -->

</div>
<!-- Contents Field END -->