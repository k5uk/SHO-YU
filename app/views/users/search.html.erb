<!-- Contents Field Start -->
<div class="Contents-Field">
<!-- Main Contents Field Start -->
<div class="Main-Contents-Field mdl-color--yellow-50">

  <!-- Single Card Field Start -->
  <div class="Single-Card-Field">
    <div class="mdl-card mdl-shadow--4dp mdl-cell mdl-cell--4-col mdl-color--lime-50">
        <div class="mdl-card__media mdl-color-text--grey-50 mdl-color--primary">
            <h3>&nbsp;&nbsp;&nbsp;ユーザーを探す</h3>
        </div>
        <div class="mdl-color-text--grey-700 mdl-card__supporting-text meta">

            <%= form_for(@user, url: users_path, html: { method: :get }) do |f| %>
                
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <%= f.label :area, { class:"mdl-textfield__label" } %><br />
                  <%= f.text_field :area, { class:"mdl-textfield__input" } %>
                </div>                
                
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <%= f.label :kiryoku, { class:"mdl-textfield__label" } %><br />
                  <%= f.text_field :kiryoku, { class:"mdl-textfield__input" } %>
                </div>

                <div class="actions">
                  <%= f.submit "検索実行", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect 
                  mdl-button--accent mdl-color--primary" %>
                </div>
      
            <% end %>
        </div>
    </div>
    </div>
    <!-- Single Card Field END -->
</div>
<!-- Main Contents Field END -->

</div>
<!-- Contents Field END -->